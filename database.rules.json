{
  "rules": {
    "members": {
      // List of members
      ".read": "auth != null",

      "$member_uid": {
        ".read": "auth != null",

        // Only the member is able to update his/her profile
        ".write": "auth != null && auth.uid == $member_uid"
      }
    },

    "prayers": {
      // List of prayers
      ".read": "auth != null",

      "$prayer_id": {
        // New prayer: any authenticated users
        // Edit a prayer: only the owner
        ".write": "auth != null && (data.exists() && data.child('poster').val() == auth.uid)"
      }
    }
  }
}